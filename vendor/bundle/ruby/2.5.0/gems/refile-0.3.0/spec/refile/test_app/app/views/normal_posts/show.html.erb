<h1><%= @post.title %></h1<>

<% if @post.image %>
  <%= attachment_image_tag(@post, :image) %>
<% end %>

<% if @post.document %>
  <%= link_to "Document", attachment_url(@post, :document) %>
<% end %>

<% if @post.document %>
  <%= link_to "Convert to Upper", attachment_url(@post, :document, :convert_case, format: "up") %>
<% end %>

<%= link_to "Edit", edit_normal_post_url(@post) %>
